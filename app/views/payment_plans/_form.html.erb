
<%= form_with(model: [@property, payment_plan], local: true) do |f| %>

<br><br><br><br>

  <div class="form-inputs ">
    <form>
      <div class="form-group">
        <label for="formGroupExampleInput">Total Amount</label>
            <%= f.number_field :total_amount , class:"form-control", style:'width:30%' %>
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Down Payment</label>
         <%= f.number_field :down_payment , class:"form-control" , style:'width:30%' %>
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Number of Months</label>
        <%= f.number_field :months , class:"form-control", style:'width:30%' %>
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Balloon Payment</label>
        <%= f.number_field :balloon_payment,class:"form-control", style:'width:30%' %>
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Balloon Payment Count</label>
        <%= f.number_field :balloon_payment_frequency , class:"form-control", style:'width:30%' %>
      </div>
        <div class="form-actions">
      <%= f.button :submit, class:'btn btn-success mb-2' %>
  </div>
    </form>

  </div>


<% end %>
