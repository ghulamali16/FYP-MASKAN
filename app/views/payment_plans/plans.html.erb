
<div class="container mt-5">
    <h1><b><%=@plans.count%> Payment Plan(s) for this Property </b></h1>
    <table class = "table table-striped mt-5">
    <thead>
      <tr>
        <th>Down payment</th>
        <th>Total amount</th>
        <th>Months</th>
        <th>Balloon payment</th>
        <th>Balloon payment frequency</th>
        <th>Property</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @plans.each do |payment_plan| %>
        <tr>
          <td><%= payment_plan.down_payment %></td>
          <td><%= payment_plan.total_amount %></td>
          <td><%= payment_plan.months %></td>
          <td><%= payment_plan.balloon_payment %></td>
          <td><%= payment_plan.balloon_payment_frequency %></td>
          <td><%= payment_plan.property_id %></td>
          <td><%= link_to 'Show Plan', property_payment_plan_path(@property, payment_plan) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Back', [@property] , class:'btn btn-secondary' %>


</div>
<div style="line-height:30em">
<br>
</div>
