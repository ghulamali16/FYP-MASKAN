<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<% if @projects.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>City</th>
        <th>Budget</th>
        <th>Status</th>
        <th>Client</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

      <tbody>

        <% @projects.each do |project| %>
          <tr>
            <td><%= project.title %></td>
            <td><%= project.city %></td>
            <td><%= project.budget %></td>
            <td><%= project.statuses %></td>
            <td><%= project.client %></td>
            <td><%= link_to 'Show', project , class:"btn btn-sm btn-primary" %></td>
            <td><%= link_to 'Edit', edit_project_path(project), class:"btn btn-sm btn-warning" %></td>
            <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
<%else%>
    <h2>No projects found!</h2>

<%end%>
<br>

<%= link_to 'Create New Project', new_project_path, class:"btn btn-info" %>
